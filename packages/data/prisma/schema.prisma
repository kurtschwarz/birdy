generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Recorder {
  id         String @id @default(uuid())
  locationId String

  location Location? @relation(fields: [locationId], references: [id])

  @@map("recorders")
}

model Location {
  id        String @id @default(uuid())
  latitude  String
  longitude String

  recorders Recorder[]

  @@map("locations")
}
