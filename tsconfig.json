{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [ "ES2022", "DOM", "DOM.Iterable", "ESNext.AsyncIterable" ],
    "diagnostics": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/",
    "dist/",
    "**/*.test.ts",
  ]
}
